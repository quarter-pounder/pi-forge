services:
  prometheus:
    image: {{ PROMETHEUS_IMAGE }}
    container_name: monitoring-prometheus
    restart: always
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--storage.tsdb.retention.time={{ PROMETHEUS_RETENTION }}'
      - '--web.console.libraries=/usr/share/prometheus/console_libraries'
      - '--web.console.templates=/usr/share/prometheus/consoles'
      - '--web.enable-lifecycle'
      - '--web.enable-remote-write-receiver'
    ports:
      - "{{ PORT_MONITORING_PROMETHEUS }}:9090"
    volumes:
      - /srv/monitoring/prometheus:/prometheus
      - ./prometheus.yml:/etc/prometheus/prometheus.yml:ro
      - ./prometheus-alerts.yml:/etc/prometheus/alerts.yml:ro
    networks:
      - monitoring-network
      - forgejo-network

  alertmanager:
    image: {{ ALERTMANAGER_IMAGE }}
    container_name: monitoring-alertmanager
    restart: always
    ports:
      - "{{ PORT_MONITORING_ALERTMANAGER }}:9093"
    volumes:
      - /srv/monitoring/alertmanager:/alertmanager
      - ./alertmanager.yml:/etc/alertmanager/alertmanager.yml:ro
    command:
      - '--config.file=/etc/alertmanager/alertmanager.yml'
      - '--storage.path=/alertmanager'
      - '--cluster.listen-address='
    networks:
      - monitoring-network
    depends_on:
      - prometheus

  grafana:
    image: {{ GRAFANA_IMAGE }}
    container_name: monitoring-grafana
    restart: always
    ports:
      - "{{ PORT_MONITORING_GRAFANA }}:3000"
    environment:
      GF_SECURITY_ADMIN_PASSWORD: "{{ GRAFANA_ADMIN_PASSWORD }}"
      GF_USERS_ALLOW_SIGN_UP: "false"
      GF_SERVER_ROOT_URL: "{{ 'https://grafana.' ~ DOMAIN if DOMAIN else 'http://localhost' }}"
      GF_ANALYTICS_REPORTING_ENABLED: "false"
      GF_ANALYTICS_CHECK_FOR_UPDATES: "false"
    volumes:
      - /srv/monitoring/grafana:/var/lib/grafana
      - ./grafana-datasource.yml:/etc/grafana/provisioning/datasources/datasource.yml:ro
      - ./grafana-dashboards.yml:/etc/grafana/provisioning/dashboards/pi-forge.yaml:ro
      - ./dashboards:/etc/grafana/provisioning/dashboards/pi-forge:ro
    networks:
      - monitoring-network
    depends_on:
      - prometheus

  node-exporter:
    image: {{ NODE_EXPORTER_IMAGE }}
    container_name: monitoring-node-exporter
    restart: always
    command:
      - '--path.rootfs=/host'
      - '--path.procfs=/host/proc'
      - '--path.sysfs=/host/sys'
      - '--collector.filesystem.mount-points-exclude=^/(sys|proc|dev|host|etc)($$|/)'
      - '--collector.textfile.directory=/textfile_collector'
    volumes:
      - /:/host:ro,rslave
      - {{ NODE_EXPORTER_TEXTFILE_DIR }}:/textfile_collector
      - /srv/monitoring/alert-suppression:/srv/monitoring/alert-suppression
    networks:
      monitoring-network:
        aliases:
          - node-exporter
    pid: host

  alert-suppression-exporter:
    image: alpine:3.19
    container_name: monitoring-alert-suppression-exporter
    restart: always
    command:
      - /bin/sh
      - -c
      - |
        while true; do
          sh /scripts/alert-suppression.sh
          sleep 30
        done
    volumes:
      - ./exporters/alert-suppression.sh:/scripts/alert-suppression.sh:ro
      - {{ NODE_EXPORTER_TEXTFILE_DIR }}:/textfile_collector
      - /srv/monitoring/alert-suppression:/srv/monitoring/alert-suppression
    networks:
      - monitoring-network
    depends_on:
      - node-exporter

  container-name-exporter:
    image: alpine:3.19
    container_name: monitoring-container-name-exporter
    restart: always
    command:
      - /bin/sh
      - -c
      - |
        apk add --no-cache curl jq >/dev/null 2>&1 || true
        while true; do
          sh /scripts/container-name-exporter.sh
          sleep 60
        done
    volumes:
      - ./exporters/container-name-exporter.sh:/scripts/container-name-exporter.sh:ro
      - {{ NODE_EXPORTER_TEXTFILE_DIR }}:/textfile_collector
      - /var/run/docker.sock:/var/run/docker.sock:ro
    networks:
      - monitoring-network
    depends_on:
      - node-exporter

  cadvisor:
    image: {{ CADVISOR_IMAGE }}
    container_name: monitoring-cadvisor
    restart: always
    privileged: true
    devices:
      - /dev/kmsg
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
      - /dev/disk/:/dev/disk:ro
    ports:
      - "127.0.0.1:8080:8080"
    networks:
      monitoring-network:
        aliases:
          - cadvisor

  loki:
    image: {{ LOKI_IMAGE }}
    container_name: monitoring-loki
    restart: always
    ports:
      - "{{ PORT_MONITORING_LOKI }}:3100"
    volumes:
      - /srv/monitoring/loki:/loki
      - ./loki.yml:/etc/loki/loki.yaml:ro
    command:
      - -config.file=/etc/loki/loki.yaml
    networks:
      monitoring-network:
        aliases:
          - loki
          - monitoring-loki

  alloy:
    image: {{ ALLOY_IMAGE }}
    container_name: monitoring-alloy
    restart: always
    ports:
      - "{{ PORT_MONITORING_ALLOY }}:12345"
    volumes:
      - ./config.alloy:/etc/alloy/config.alloy:ro
      - /var/log:/var/log:ro
      - /srv/forgejo/log:/srv/forgejo/log:ro
      - /var/lib/docker/containers:/var/lib/docker/containers:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
    command:
      - run
      - /etc/alloy/config.alloy
      - --server.http.listen-addr=0.0.0.0:12345
    dns:
      - 1.1.1.1
      - 1.0.0.1
      - 8.8.8.8
    environment:
      - ALLOY_USAGE_REPORTING_ENABLED=false
    networks:
      - monitoring-network
    depends_on:
      - loki

networks:
  monitoring-network:
    driver: bridge

  forgejo-network:
    external: true
    name: forgejo-network
