groups:
  - name: system_alerts
    interval: 30s
    rules:
      - alert: HighCPUUsage
        expr: 100 - (avg by (instance) (rate(node_cpu_seconds_total{mode="idle"}[5m])) * 100) > 80
        for: 5m
        labels:
          severity: warning
        annotations:
        {% raw %}
          summary: "High CPU usage on {{ $labels.instance }}"
          description: "CPU usage is above 80% (current value: {{ $value }}%)"
        {% endraw %}

      - alert: HighMemoryUsage
        expr: 100 * (1 - ((node_memory_MemAvailable_bytes) / (node_memory_MemTotal_bytes))) > 85
        for: 5m
        labels:
          severity: warning
        annotations:
        {% raw %}
          summary: "High memory usage on {{ $labels.instance }}"
          description: "Memory usage is above 85% (current value: {{ $value }}%)"
        {% endraw %}

      - alert: LowDiskSpace
        expr: 100 - ((node_filesystem_avail_bytes{mountpoint="/"} * 100) / node_filesystem_size_bytes{mountpoint="/"}) > 85
        for: 5m
        labels:
          severity: warning
        annotations:
        {% raw %}
          summary: "Low disk space on {{ $labels.instance }}"
          description: "Disk usage is above 85% (current value: {{ $value }}%)"
        {% endraw %}

      - alert: CriticalDiskSpace
        expr: 100 - ((node_filesystem_avail_bytes{mountpoint="/"} * 100) / node_filesystem_size_bytes{mountpoint="/"}) > 95
        for: 1m
        labels:
          severity: critical
        annotations:
        {% raw %}
          summary: "CRITICAL: Very low disk space on {{ $labels.instance }}"
          description: "Disk usage is above 95% (current value: {{ $value }}%)"
        {% endraw %}

      - alert: HighTemperature
        expr: pi_cpu_temperature_celsius > 80
        for: 2m
        labels:
          severity: warning
        annotations:
        {% raw %}
          summary: "High CPU temperature on {{ $labels.instance }}"
          description: "CPU temperature is above 80째C (current value: {{ $value }}째C)"
        {% endraw %}

      - alert: CriticalTemperature
        expr: pi_cpu_temperature_celsius > 85
        for: 1m
        labels:
          severity: critical
        annotations:
        {% raw %}
          summary: "CRITICAL: CPU temperature very high on {{ $labels.instance }}"
          description: "CPU temperature is above 85째C (current value: {{ $value }}째C)"
        {% endraw %}

      - alert: PiThrottlingDetected
        expr: pi_throttled_flag{condition="throttled_now"} == 1
        for: 1m
        labels:
          severity: critical
        annotations:
        {% raw %}
          summary: "CRITICAL: CPU throttling detected on {{ $labels.instance }}"
          description: "The SoC is actively throttling due to thermal or power limits. Investigate cooling and power delivery."
        {% endraw %}

      - alert: PiUndervoltageDetected
        expr: pi_throttled_flag{condition="undervoltage_now"} == 1
        for: 1m
        labels:
          severity: critical
        annotations:
        {% raw %}
          summary: "CRITICAL: Under-voltage reported on {{ $labels.instance }}"
          description: "Under-voltage is currently asserted. Check the PSU, cabling, and power budget."
        {% endraw %}

      - alert: PiLowVoltage
        expr: pi_core_voltage_volts < 0.75
        for: 2m
        labels:
          severity: warning
        annotations:
        {% raw %}
          summary: "Low core voltage on {{ $labels.instance }}"
          description: "Core voltage dropped below 0.75V (current value: {{ $value }}V)."
        {% endraw %}

      - alert: PiCriticalVoltage
        expr: pi_core_voltage_volts < 0.70
        for: 1m
        labels:
          severity: critical
        annotations:
        {% raw %}
          summary: "CRITICAL: Core voltage critically low on {{ $labels.instance }}"
          description: "Core voltage dropped below 0.70V (current value: {{ $value }}V). Immediate action required."
        {% endraw %}

      - alert: PiKernelErrorsDetected
        expr: increase(pi_dmesg_error_total[5m]) > 0
        for: 5m
        labels:
          severity: warning
        annotations:
        {% raw %}
          summary: "Kernel errors detected on {{ $labels.instance }}"
          description: "Kernel reported new error-level log entries within the last 5 minutes. Inspect dmesg for details."
        {% endraw %}

  - name: forgejo_alerts
    interval: 30s
    rules:
      - alert: ForgejoDown
        expr: up{job="forgejo"} == 0
        for: 2m
        labels:
          severity: critical
        annotations:
          summary: "Forgejo is down"
          description: "Forgejo has been down for more than 2 minutes"

      - alert: ForgejoHighMemory
        expr: process_resident_memory_bytes{job="forgejo"} > 2000000000
        for: 5m
        labels:
          severity: warning
        annotations:
        {% raw %}
          summary: "Forgejo using high memory"
          description: "Forgejo memory usage is above 2GB (current: {{ $value | humanize }}B)"
        {% endraw %}

  - name: woodpecker_alerts
    interval: 30s
    rules:
      - alert: WoodpeckerDown
        expr: up{job="woodpecker"} == 0
        for: 2m
        labels:
          severity: critical
        annotations:
          summary: "Woodpecker CI is down"
          description: "Woodpecker server has been unreachable for more than 2 minutes"

  - name: docker_alerts
    interval: 30s
    rules:
      - alert: ContainerDown
        expr: up{job="cadvisor",container_label_com_docker_compose_service!~"woodpecker|woodpecker-runner|forgejo-actions-runner|github-actions-runner"} == 0
        for: 2m
        labels:
          severity: warning
        annotations:
        {% raw %}
          summary: "Container {{ $labels.job }} is down"
          description: "Container has been down for more than 2 minutes"
        {% endraw %}

      - alert: UnboundDown
        expr: max((count(container_cpu_usage_seconds_total{job="cadvisor",name=~".*unbound.*"}) or count(container_cpu_usage_seconds_total{job="cadvisor",container_label_com_docker_compose_service="unbound"}) or count(container_name_info{job="node-exporter",container_name=~".*unbound.*"})) > 0) or vector(0) == 0
        for: 2m
        labels:
          severity: warning
        annotations:
          summary: "Unbound DNS resolver is down"
          description: "Unbound container has been down for more than 2 minutes. DNS resolution may be affected."

      - alert: RunnerSuppressionActive
        expr: |
          label_replace(
            alert_suppression_enabled{runner=~"woodpecker|woodpecker-runner|forgejo-actions-runner|github-actions-runner"} == 1,
            "runner_name", "$1", "runner", "(.*)"
          )
        for: 10s
        labels:
          severity: info
          alert_type: suppression
        annotations:
        {% raw %}
          summary: "Runner alert suppression is active for {{ $labels.runner }}"
          description: "Suppression is enabled for {{ $labels.runner }}. Runner down alerts will be inhibited."
        {% endraw %}

      - alert: RunnerContainerDown
        expr: |
          label_replace(
            up{job="cadvisor",name=~"woodpecker|woodpecker-runner|forgejo-actions-runner|github-actions-runner.*"} == 0,
            "runner_name", "$1", "name", "(.*)"
          )
        for: 2m
        labels:
          severity: warning
          alert_type: runner
        annotations:
        {% raw %}
          summary: "Runner container {{ $labels.container_label_com_docker_compose_service }} is down"
          description: "Runner container has been down for more than 2 minutes. Suppress this alert if the runner was manually stopped."
        {% endraw %}

      - alert: HighContainerMemory
        expr: container_memory_usage_bytes{name!=""} > 1000000000
        for: 5m
        labels:
          severity: info
        annotations:
        {% raw %}
          summary: "Container {{ $labels.name }} using high memory"
          description: "Memory usage: {{ $value | humanize }}B"
        {% endraw %}

  - name: runner_alerts
    interval: 30s
    rules:
      - alert: WoodpeckerRunnerDown
        expr: up{job="cadvisor",container_label_com_docker_compose_service="woodpecker-runner"} == 0 and (alert_suppression_enabled{runner="woodpecker-runner"} == 0 or absent(alert_suppression_enabled{runner="woodpecker-runner"}))
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: "Woodpecker runner is down"
          description: "Woodpecker runner container has been down for more than 5 minutes"

      - alert: ForgejoActionsRunnerDown
        expr: up{job="cadvisor",container_label_com_docker_compose_service="forgejo-actions-runner"} == 0 and (alert_suppression_enabled{runner="forgejo-actions-runner"} == 0 or absent(alert_suppression_enabled{runner="forgejo-actions-runner"}))
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: "Forgejo Actions runner is down"
          description: "Forgejo Actions runner container has been down for more than 5 minutes"

      - alert: GitHubActionsRunnerDown
        expr: |
          label_replace(
            up{job="cadvisor",name=~"github-actions-runner.*"} == 0,
            "runner_name", "$1", "name", "(.*)"
          ) and on(runner_name) label_replace(
            (alert_suppression_enabled{runner=~"github-actions-runner.*"} == 0 or absent(alert_suppression_enabled{runner=~"github-actions-runner.*"})),
            "runner_name", "$1", "runner", "(.*)"
          )
        for: 5m
        labels:
          severity: warning
        annotations:
        {% raw %}
          summary: "GitHub Actions runner {{ $labels.runner_name }} is down"
          description: "GitHub Actions runner container has been down for more than 5 minutes"
        {% endraw %}
{% if EXTERNAL_RUNNER_METRICS_IP %}
      - alert: ExternalRunnerDown
        expr: up{job="external-runner"} == 0
        for: 5m
        labels:
          severity: warning
        annotations:
          summary: "External runner is down"
          description: "External runner metrics endpoint has been unreachable for more than 5 minutes"
{% endif %}

{% if DR_WEBHOOK_URL|default('') %}
  - name: dr_alerts
    interval: 30s
    rules:
      - alert: PiSystemDown
        expr: up{job="node-exporter"} == 0
        for: 3m
        labels:
          severity: critical
          action: "trigger_dr"
        annotations:
          summary: "Pi system is down - triggering DR"
          description: "Node exporter has been down for more than 3 minutes. Activating disaster recovery."

      - alert: ForgejoCriticalDown
        expr: up{job="forgejo"} == 0
        for: 3m
        labels:
          severity: critical
          action: "trigger_dr"
        annotations:
          summary: "Forgejo critical failure - triggering DR"
          description: "Forgejo has been down for more than 3 minutes. Activating disaster recovery."

      - alert: MultipleServicesDown
        expr: (up{job="forgejo"} == 0) + (up{job="prometheus"} == 0) + (up{job="grafana"} == 0) >= 2
        for: 2m
        labels:
          severity: critical
          action: "trigger_dr"
        annotations:
          summary: "Multiple services down - triggering DR"
          description: "Multiple critical services are down. Activating disaster recovery."

      - alert: PiRecovered
        expr: up{job="node-exporter"} == 1 and up{job="forgejo"} == 1
        for: 1m
        labels:
          severity: info
          action: "recover_dr"
        annotations:
          summary: "Pi system recovered - deactivating DR"
          description: "Pi system is back online. Deactivating disaster recovery and syncing data."

      - alert: HeartbeatMissing
        expr: time() - node_boot_time_seconds > 300 and (up{job="node-exporter"} == 0 or absent(up{job="node-exporter"}))
        for: 1m
        labels:
          severity: critical
          action: "trigger_dr"
        annotations:
          summary: "Pi heartbeat missing - triggering DR"
          description: "No heartbeat from Pi system for more than 5 minutes. Activating disaster recovery."
{% endif %}
