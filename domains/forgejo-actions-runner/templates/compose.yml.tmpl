services:
  forgejo-actions-runner:
    image: {{ FORGEJO_ACTIONS_RUNNER_IMAGE }}
    container_name: forgejo-actions-runner
    restart: unless-stopped
    user: root
    entrypoint: ["/bin/sh", "-c"]
    command:
      - |
        chown -R 1000:1000 /data || true
        if [ ! -f /data/.runner ]; then
          echo "WARNING: .runner file not found."
          echo "To register manually, run interactively:"
          echo "  docker exec -it forgejo-actions-runner forgejo-runner register"
          echo "Then provide:"
          echo "  Instance URL: http://forgejo:3000 (internal) or {{ FORGEJO_EXTERNAL_URL }} (external)"
          echo "  Token: (from vault: FORGEJO_ACTIONS_RUNNER_TOKEN)"
          echo "  Name: forgejo-actions-runner"
          echo "  Labels: ubuntu-latest:docker://node:20-bookworm,self-hosted:host"
          echo ""
          echo "IMPORTANT: Label name must match workflow's 'runs-on' value"
          echo "The Docker image must include Node.js for actions to work (e.g., node:20-bookworm)"
          echo "Format: '<label-name>:docker://<docker-image>'"
          echo "For host execution, use '<label>:host' (e.g., self-hosted:host)"
          echo ""
          echo "NOTE: Use Node.js images (node:20-bookworm, node:20-bullseye) for GitHub Actions compatibility"
          echo "The .runner file will be created in /data and persist across restarts."
          echo ""
          echo "NETWORK CONFIGURATION:"
          echo "When registering, ensure spawned action containers can reach Forgejo."
          echo "The runner is on forgejo-network. Spawned containers should use:"
          echo "  - Network mode: Use 'forgejo-network' or configure runner to join network"
          echo "  - Forgejo URL: Use 'http://forgejo:3000' for internal communication"
          echo "Waiting for manual registration (checking every 10 seconds)..."
          while [ ! -f /data/.runner ]; do
            sleep 10
          done
          echo ".runner file found! Starting daemon..."
        fi
        echo "Starting runner daemon..."
        exec /bin/forgejo-runner daemon
    environment:
      FORGEJO_RUNNER_HOST: {{ FORGEJO_EXTERNAL_URL }}
      FORGEJO_RUNNER_TOKEN: {{ FORGEJO_ACTIONS_RUNNER_TOKEN }}
    working_dir: /data
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /srv/forgejo-actions-runner:/data
    networks:
      forgejo-network:
        aliases:
          - forgejo-actions-runner

networks:
  forgejo-network:
    external: true
    name: forgejo-network

